@model IEnumerable<WebApplication_MVC.Models.Book>

@{
    ViewBag.Title = "UserSearchBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container ">
    <div class="ROW">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6">
            <div class="content d-flex align-items-lg-center">
                <div align="center">
                    <form action="@Url.Action("PostUserSearchBook","User")" method="post">
                        <div class="form-group">
                            <div style="color: @ViewBag.color">@ViewBag.msg</div>
                            <label>Book:</label>
                            <select class="form-control" tabindex="-1" aria-hidden="true" name="id" id="id">
                                @foreach (var item in Model)
                                {
                                    <option value="@item.Id">@item.Title</option>
                                }
                            </select>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary legitRipple">Submit<i class="icon-arrow-right14 position-right"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>