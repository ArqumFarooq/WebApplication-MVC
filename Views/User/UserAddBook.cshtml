@model WebApplication_MVC.Models.Book

@{
    ViewBag.Title = "AdminAddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ROW">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        <div class="content d-flex align-items-lg-center">
            <form action="@Url.Action("PostUserAddBook", "User")" method="post">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">Add Book<a class="heading-elements-toggle"><i class="icon-more"></i></a></h5>
                                        <div style="color: @ViewBag.color">@ViewBag.msg</div>
                        <div align="center"><span style="visibility: hidden; background-color: lawngreen; padding: 5px; @ViewData["res"]">Book Add Successfully!</span></div>
                    </div>
                    <span style="position: absolute; color: blue; margin-left: 215px; margin-top: 0px;">
                        @ViewData["nerr"]
                    </span>
                    <div class="panel-body">
                        <div class="form-group">
                            <label>Title:</label>
                            <input type="text" class="form-control" placeholder="Title Name" name="Title" required>
                        </div>
                        <div class="form-group">
                            <label>Author:</label>
                            <input type="text" class="form-control" placeholder="Auther Name" name="Auther" required>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary legitRipple">Submit<i class="icon-arrow-right14 position-right"></i></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>