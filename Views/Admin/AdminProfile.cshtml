@{
    ViewBag.Title = "AdminProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content d-flex">
    <div class="row">
        <div class="col-lg-2"></div>
        <!-- Form horizontal -->
        <div class="panel panel-flat  col-lg-8">
            <div class="panel-heading">
                <div>@ViewBag.msg</div>
                <h5 class="panel-title" style="text-align: center"> Admin Profile <a class="heading-elements-toggle"><i class="icon-more"></i></a></h5>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" action="@Url.Action("PostAdminProfile", "Admin")" method="post">
                    <fieldset class="content-group">
                        <legend class="text-bold">&nbsp;&nbsp;Profile Information</legend>
                        <input type="hidden" class="form-control" name="Id" value="@ViewBag.User.Id">
                        <div class="form-group">
                            <label class="control-label col-lg-2">First Name</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" name="FirstName" value="@ViewBag.User.FirstName" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-2">Last Name</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" name="LastName" value="@ViewBag.User.LastName" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-2">Password</label>
                            <div class="col-lg-10">
                                <input type="password" class="form-control" name="Password" value="@ViewBag.User.Password" @*pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"*@ @*title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"*@ required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-2">Contact</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" name="Contact" value="@ViewBag.User.Contact" @*pattern="[0-9]{4}-[0-9]{7}" title="match the pattern 0000-0000000"*@ required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Email</label>
                            <div class="col-md-10">
                                <input class="form-control" type="email" name="Email" value="@ViewBag.User.Email" required>
                            </div>
                        </div>

                    </fieldset>

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary legitRipple">Submit<i class="icon-arrow-right14 position-right"></i></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /form horizontal -->
    </div>
</div>