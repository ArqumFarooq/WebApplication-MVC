@*@model WebApplication_MVC.Models.User*@

@{
    ViewBag.Title = "AdminEditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container pt-3 m-5">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-6">
            <form action="@Url.Action("PostAdminEditUser","Admin")" method="post">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <div style="color: @ViewBag.color">@ViewBag.msg</div>
                        <h5 class="panel-title">Edit User<a class="heading-elements-toggle"><i class="icon-more"></i></a></h5>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <input type="text" class="form-control" value="@ViewBag.user.Id" name="Id" readonly style="display: none">
                        </div>

                        <div class="form-group">
                            <label>FirstName:</label>
                            <input type="text" class="form-control" value="@ViewBag.user.FirstName" name="FirstName">
                        </div>
                        <div class="form-group">
                            <label>LastName:</label>
                            <input type="text" class="form-control" value="@ViewBag.user.LastName" name="LastName">
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            <input type="password" class="form-control" value="@ViewBag.user.Password" name="Password" @*pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"*@>
                        </div>
                        <div class="form-group">
                            <label>Contact:</label>
                            <input type="text" class="form-control" value="@ViewBag.user.Contact" name="Contact" @*pattern="[0-9]{4}-[0-9]{7}"*@ title="match the pattern 0000-0000000">
                        </div>
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="email" class="form-control" value="@ViewBag.user.Email" name="Email">
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary legitRipple">Submit<i class="icon-arrow-right14 position-right"></i></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>