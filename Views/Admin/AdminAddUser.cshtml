@model WebApplication_MVC.Models.User

@{
    ViewBag.Title = "AdminAddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content d-flex align-items-lg-center">
    <form action="@Url.Action("PostAdminAddUser", "Admin")" method="post">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <div>@ViewBag.msg</div>
                <h5 class="panel-title">Add User<a class="heading-elements-toggle"><i class="icon-more"></i></a></h5>
            </div>
            <span style="position:absolute; color:blue; margin-left:215px; margin-top:0px;">
                @ViewData["nerr"]
            </span>
            <div class="panel-body">
                <div align="center"><span style="visibility:hidden; background-color:lawngreen; padding:5px; @ViewData["res"]">User Add Successfully!</span></div>
                <div class="form-group">
                    <label>FirstName:</label>
                    <input type="text" class="form-control" placeholder="First Name" name="FirstName" required>
                </div>
                <div class="form-group">
                    <label>LastName:</label>
                    <input type="text" class="form-control" placeholder="Last Name" name="LastName" required>
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" class="form-control" placeholder="Your strong password" name="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
                </div>
                <div class="form-group">
                    <label>Contact:</label>
                    <input type="text" class="form-control" placeholder="Contact" name="Contact" pattern="[0-9]{4}-[0-9]{7}" title="match the pattern 0000-0000000" required>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" class="form-control" placeholder="Your Email" name="Email" required>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary legitRipple">Submit<i class="icon-arrow-right14 position-right"></i></button>
                </div>
            </div>
        </div>
    </form>

</div>