                    <form action="@Url.Action("AdminViewUserBook", "Admin")">
                        <div class="row">
                            <div class="form-group col-lg-4">
                                <input value="ViewBag.Name" type="text" name="Name" class="form-control" placeholder="Type to Search Name:..." />
                            </div>
                            <div class="form-group col-lg-4">
                                <input value="ViewBag.Title" type="text" name="Title" class="form-control" placeholder="Type to Search Title:..." />
                            </div>
                            <div class="form-group col-lg-4">
                                <input value="ViewBag.Author" type="text" name="Author" class="form-control" placeholder="Type to Search Author:..." />
                            </div>
                        </div>
                        <div class="d-flex flex-row-reverse">
                            <div class="p-2">
                                <button type="submit" class="btn btn-danger legitRipple">Submit<i class="icon-arrow-right14 position-right"></i></button>
                            </div>
                        </div>
                    </form>

                </div>
                
                <div class="content d-flex align-items-lg-center">
                    <div class="panel panel-flat">

                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer">
                            <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row">
                                        <th>Sr.No</th>
                                        <th>User Name</th>
                                        <th>Title</th>
                                        <th>Author</th>
                                        <th>Issue Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @{
                                    var i = 0;
                                    foreach (Book item in ViewBag.Book)
                                    {
                                        i++;
                                        <tr role="row" class="odd">
                                            <td>@i</td>
                                            <td>@item.User.FirstName&nbsp;@item.User.LastName</td>
                                            <td>@item.Title</td>
                                            <td>@item.Auther</td>
                                            <td>@item.CreatedAt.Value.Date.ToLongDateString()</td>
                                        </tr>
                                    }
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>