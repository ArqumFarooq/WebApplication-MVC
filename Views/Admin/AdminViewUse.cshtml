                </div>
                <br>
                <br>
                <div class="content d-flex align-items-lg-center">
                    <div class="panel panel-flat">
                        <div class="panel-heading">
                            <div>@ViewBag.msg</div>
                            <h5 class="panel-title" align="center">User Record<a class="heading-elements-toggle"><i class="icon-more"></i></a></h5>
                        </div>
                        <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                            <thead>
                                <tr role="row">
                                    <th>Sr.No</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Contact</th>
                                    <th>Total Books</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                    <tr role="row" class="odd">
                                            <td>@i</td>
                                            <td>@Model.FirstName</td>
                                            <td>@Model.LastName</td>
                                            <td>@Model.Contact</td>
                                            <td>@Model.Books.Count</td>
                                            <td>@Model.Email </td>
                                            <td class="text-center">
                                                <ul class="icons-list">
                                                    <li class="dropdown">
                                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                            <i class="icon-menu9"></i>
                                                        </a>
                                                        <ul class="dropdown-menu dropdown-menu-right">
                                                            <li><a href="@Url.Action("AdminEditUser", "Admin", new {id = Model.Id})"><i class="icon-glyphicon-edit"></i> Edit User</a></li>
                                                            <li><a onclick="deleteFunction(@Model.Id)" data-toggle="modal" data-target="#deleteModal"><i class="icon-glyphicon-trash"></i> Delete User</a></li>
                                                        </ul>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    function deleteFunction(id) {
        var a = document.getElementById('deleteId');
        a.href = "../Admin/AdminDeleteUser?id=" + id + "";
    }
</script>
